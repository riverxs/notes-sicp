
;;; 用代换模型展示下面函数在求值（+ 4 5）时所产生的计算过程,这些计算过程是递归的还是迭代的
;;; inc函数表示将参数加1，dec函数表示将参数减1
(define (+ a b)
	(if (= a 0)
		b
		(inc (+ (dec a) b))))

;;; 计算过程，递归过程
 ; (+ 4 5)
 ; (inc (+ 3 5)))
