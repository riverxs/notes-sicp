 ; (inc (inc (inc (+ 1 5)))))
 ; (inc (inc (inc (inc 5))))
 ; (inc (inc (inc 6)))
 ; (inc (inc 7))
 ; (inc 8))
 ; => 9


(define (+ a b)
	(if (= a 0)
		b
		(+ (dec a) (inc b))))

